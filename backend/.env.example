# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this

# Database
DATABASE_URL=sqlite:///dailyadagent.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth / API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token
FACEBOOK_PAGE_ID=your-page-id
FACEBOOK_GRAPH_API_VERSION=v22.0

# AI/LLM Provider (openai or anthropic)
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Optional: Force mock Facebook data (for development without real token)
# USE_MOCK_FACEBOOK_DATA=true

# Encryption key for storing Facebook tokens (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key

# Optional: Stock Images API
# UNSPLASH_ACCESS_KEY=your-unsplash-access-key
# PEXELS_API_KEY=your-pexels-api-key

# Logging
LOG_TO_STDOUT=1
